


@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UserLayout</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <style>

        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #007BFF;
            color: #fff;
            padding: 10px 0;
        }

        .navbar-brand {
            font-size: 24px;
        }

        .navbar-nav .nav-item {
            margin-right: 10px;
        }

        .container {
            margin-top: 20px;
        }

        .user-profile {
            text-align: center;
            margin-bottom: 20px;
        }

            .user-profile img {
                width: 100px;
                height: 80px;
                border-radius: 50%;
                border: 2px solid #007BFF;
            }

        .sidebar-menu .list-group-item {
            background-color: #fff;
            border: none;
            padding: 10px 15px;
            border-bottom: 1px solid #ccc;
            color: #007BFF;
            font-weight: bold;
        }

        .list-group-item:hover {
            background-color: #007BFF;
            color: #fff;
        }

        .list-group-item a {
            text-decoration: none;
            color: #007BFF;
        }

        .content {
            background-color: #fff;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <header>
            <nav class="navbar navbar-expand-lg">
                <div class="container">
                    <a class="navbar-brand"> <b>Exam Portal</b></a>
                    <ul class="navbar-nav">
                    </ul>

                </div>
            </nav>
        </header>
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                   
                    <div class="list-group sidebar-menu">
                        <a href="@Url.Action("Index", "Dashboard")" class="list-group-item list-group-item-action">Dashboard</a>
                        <a href="@Url.Action("Index", "Topic")" class="list-group-item list-group-item-action">Topic</a>
                        <a href="@Url.Action("Index", "Contents")" class="list-group-item list-group-item-action">Contents</a>
                        <a href="@Url.Action("Index", "Student")" class="list-group-item list-group-item-action">Student</a>
                        <a href="@Url.Action("Index", "Question")" class="list-group-item list-group-item-action">Question</a>
                        <a href="@Url.Action("Index", "ExamDetails")" class="list-group-item list-group-item-action">Exam</a>
                    </div>
                </div>
                <main class="col-md-9 content">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>
</body>
</html>
