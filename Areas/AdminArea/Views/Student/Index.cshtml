@model IEnumerable<MVC_Studnt_exam.Models.tblStudent_details>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/AdminArea/Views/Shared/adminlayout.cshtml";
}
<style>
    .card {
        border: 1px solid #ccc;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        background-color: #007BFF;
        color: #fff;
    }

    .card-body {
        padding: 20px;
    }

    .btn-primary {
        background-color: #007BFF;
        border: none;
    }

    .btn-update {
        background-color: #ffc107;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 10px;
        text-align: left;
    }

    thead {
        background-color: #007BFF;
        color: #fff;
    }

    tbody tr:nth-child(odd) {
        background-color: #f2f2f2;
    }
</style>

<script>
    $(document).ready(function () {
        $("#btnsubmit").click(function () {
            AddStudentData();
        })
    })
    function AddStudentData() {
        var n = $("#txtname").val();
        var e = $("#txtemail").val();
        var p = $("#txtpass").val();
        var m = $("#txtmob").val();
        var q = $("#txtqlf").val();
        var st = { "Student_name": n, "Email_address": e,"password":p, "Mobile_number": m, "Qualification": q };


        $.ajax({
            url: '/AdminArea/Student/AddStudent',
            method: 'post',
            data: JSON.stringify(st),
            contentType: 'application/json',
            success: function (resp) {
                console.log(resp);
                alert(resp);
                window.location.href = "/AdminArea/Student";
            }
        })
        cleardata();

    }
    function cleardata() {
        $("#txtname").val("");
        $("#txtemail").val("");
        $("#txtpass").val("");
        $("#txtmob").val("");
        $("#txtqlf").val("");
    }
</script>


<div class="container-fluid">
    <div class="row">
        <div class="col-4">
            <div class="card">
                <div class="card-header">
                    <h4>Student Details</h4>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label>Student Name</label>
                        <input type="text" id="txtname" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label>Email Address</label>
                        <input type="text" id="txtemail" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label>Password</label>
                        <input type="text" id="txtpass" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label>Mobile Number</label>
                        <input type="text" id="txtmob" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label>Qualification</label>
                        <input type="text" id="txtqlf" class="form-control" />
                    </div>
                </div>
                <div class="card-footer">
                    <input type="button" value="Submit" id="btnsubmit" class="btn btn-success" />
                </div>
            </div>
        </div>
        <div class="col-8">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Student ID</th>
                        <th>Student Name</th>
                        <th>Email Address</th>
                        
                        <th>Password</th>
                        <th>Mobile Number</th>
                        <th>Qualification</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Student_id</td>
                            <td>@item.Student_name</td>
                            <td>@item.Email_address</td>
                            <td>@item.password</td>
                            <td>@item.Mobile_number</td>
                            <td>@item.Qualification</td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



